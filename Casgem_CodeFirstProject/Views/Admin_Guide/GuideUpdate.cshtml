@model Casgem_CodeFirstProject.DAL.Entities.Guide
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmet Güncelleme Sayfası</h2>
<form method="post">
    @Html.HiddenFor(x => x.GuideID)
    @Html.Label("Ad")
    @Html.TextBoxFor(x => x.GuideName, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama")
    @Html.TextBoxFor(x => x.GuideTitle, new { @class = "form-control" })
   
    <br />
    @Html.Label("Fotoğraf")
    @Html.TextBoxFor(x => x.GuideImageUrl, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Hizmeti Güncelle</button>
</form>



