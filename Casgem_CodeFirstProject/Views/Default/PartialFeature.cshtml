@model  List<Casgem_CodeFirstProject.DAL.Entities.Feature>
<section class="w3l-specification-6">
    <div class="specification-layout editContent">
        <div class="container-fluid">

            <div class="row text-left img-grids">
                <div class="col-lg-6 p-0">

                    @foreach (var item in Model)
                    {
                        if (item.Status == "True")
                        {
                            <div class="@item.FeatureImage">
                                <div class="p-md-5 p-3">
                                    <h4><a href="#url">@item.FeatureDes</a></h4>
                                    <p>@item.FeatureTitle </p>
                                </div>
                            </div>
                        }
                    }
                    </div>

                    <div class="col-lg-6 p-0">
                        <div class="four-grids">



                            @foreach (var item in Model)
                            {
                                if (item.Status == "False")
                                {


                                    <div class="images-text">
                                        <div class="@item.FeatureImage">
                                            <div class="p-md-5 p-3">
                                                <h4><a href="#url">@item.FeatureDes</a></h4>
                                                <p>@item.FeatureTitle </p>

                                            </div>


                                        </div>
                                    </div>
                                }
                            }


                        </div>
                    </div>



                </div>
            </div>
        </div>
    </section>
